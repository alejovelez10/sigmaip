<p id="notice"><%= notice %></p>

<div class="row">
<div class="col-md-8">
  <h1>Categorias</h1>
</div>
<div class="col-md-4 text-right">
  <%= link_to 'Nueva Categoria de Blog', new_new_category_path,:"data-turbolinks" => false, class: "btn btn-primary" %>

</div>
  
</div>

<table class="table">
  <thead>
    <tr>
      <th>Nombre</th>
      <th>Descripcion</th>
   
      
      <th colspan="3" style="width:15%"></th>
    </tr>
  </thead>

  <tbody>
    <% @new_categories.each do |new_category| %>
      <tr>
        <td><%= new_category.name %></td>
        <td><%= new_category.description %></td>

        <td><%= link_to 'Ver', new_category %></td>
        <td><%= link_to 'Editar', edit_new_category_path(new_category) %></td>
        <td><%= link_to 'Eliminar', new_category, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

