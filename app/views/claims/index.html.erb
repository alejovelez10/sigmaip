<p id="notice"><%= notice %></p>

<h1>Peticiones, Quejas, Reclamos y Solicitudes</h1>

<table class="table">
  <thead>
    <tr>
    <th>Fecha</th>
      <th>Nombre</th>
      <th>Email</th>
      <th>Empresa</th>
      <th>Tipo</th>
      <th>Mensaje</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @claims.each do |claim| %>
      <tr>
        <td><%= get_date(claim.created_at) %></td>
        <td><%= claim.name %></td>
        <td><%= claim.email %></td>
        <td><%= claim.company %></td>
        <td><%= claim.typep %></td>
        <td><%= claim.message %></td>

        <td><%= link_to 'Eliminar', claim, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

