<p id="notice"><%= notice %></p>


<div class="row">
<div class="col-md-8">
  <h1>Entradas</h1>
</div>
<div class="col-md-4 text-right">
  <%= link_to 'Nueva Entrada', new_notice_path,:"data-turbolinks" => false, class: "btn btn-primary" %>

</div>
  
</div>

<table class="table">
  <thead>
    <tr>
      <th>Nombre</th>
      <th>Categoria</th>
      <th>Imagen</th>
   
      <th colspan="3" style="width:15%"></th>
    </tr>
  </thead>

  <tbody>
    <% @notices.each do |notice| %>
      <tr>
        <td><%= notice.name %></td>
        <td><%= notice.new_category.name %></td>
      
        <td><%= image_tag notice.image_url, style: "width:100px;" if notice.image_url%></td>
        <td><%= link_to 'Ver', notice %></td>
        <td><%= link_to 'Editar', edit_notice_path(notice) %></td>
        <td><%= link_to 'Eliminar', notice, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


